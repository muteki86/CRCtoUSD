<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 	xmlns="http://xamarin.com/schemas/2014/forms" 
				xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
				x:Class="CRCtoUSD.TipoDeCambioForm"
				Title="Azure Todo">
  <Grid RowSpacing="0">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <ActivityIndicator Grid.RowSpan="2"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       IsVisible="False"
                       IsEnabled="True"
                       x:Name="syncIndicator"/>


	<StackLayout Grid.Row="0" BackgroundColor="#FFF" Padding="10,30,10,5">
		<Label x:Name="title1" FontSize="20" 
       			Text="CRC to USD" ></Label>
		</StackLayout>
		
	<StackLayout Grid.Row="1" BackgroundColor="#5ABAFF" Padding="10,5,10,5">

			<Label x:Name="valorCompraLbl"
       			Text="Valor compra:"></Label>
		<Label x:Name="valorCompra"
       			Text="0.00"></Label>
			
		<Label x:Name="valorVentaLbl"
       			Text="Valor venta:"></Label>
		<Label x:Name="valorVenta"
       			Text="0.00"></Label>

	</StackLayout>
</Grid>	
</ContentPage>
